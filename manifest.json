{
	"name": "CDCShowBugs Extension",
	"version": "1.0",
	"description": "Display bugs for this URL.",

	"background": {"scripts":["background.js", "jquery.min.js"]},

	"content_scripts": [ {
    	"matches": ["http://*/*", "https://*/*"],
    	"js": ["content_script.js", "jquery.min.js"],
    	"all_frames": true,
    	"run_at": "document_end"
	}],


	"icons":{
		"128":"icon_128.png"
	},


	"permissions": [
		"tabs", 
		"debugger", 
		"background", 
		"clipboardWrite", 
		"notifications",
		"webNavigation",
		"history",
		"http://*/*", 
		"https://*/*"
	],


	"browser_action":	{
		"default_icon": "icon.png",
		"popup": "cdcshowbugs.html"		
	}
}