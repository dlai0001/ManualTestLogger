{
	"name": "Manual Test Logger",
	"version": "0.5",
	"description": "Displays a test log of manual steps.",

	"background": {"scripts":["background.js", "jquery.min.js"]},

	"content_scripts": [ {
    	"matches": ["http://*/*", "https://*/*"],
    	"js": ["content_script.js", "jquery.min.js"],
    	"all_frames": true,
    	"run_at": "document_end"
	}],


	"icons":{
		"128":"icon_128.png"
	},


	"permissions": [
		"tabs", 
		"debugger", 
		"background", 
		"clipboardWrite", 
		"notifications",
		"webNavigation",
		"history",
		"http://*/*", 
		"https://*/*"
	],


	"browser_action":	{
		"default_icon": "icon.png",
		"popup": "manual-test-logger.html"		
	}
}